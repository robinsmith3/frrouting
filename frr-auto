# Start with a base image
FROM frrouting/frr:latest

# Set metadata
LABEL maintainer="robinsmith3@gmail.com"
LABEL version="2.0"
LABEL description="Custom Free Range Routing image which helps FRR run smoothly from startup"

# Set working directory
WORKDIR /etc/frr

# make sure you update this file(turn on the daemons you need) before running 
COPY daemons ./

# these stored locally assure frr runs smoothly out of the box
RUN touch ./vtysh.conf
RUN touch ./frr.conf
